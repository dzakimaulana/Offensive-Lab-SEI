<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">
        Book Catalogue
      </h1>

      <!-- Error Message -->
      <% if (query.error === 'already_favorited') { %>
      <p class="text-red-500 text-center mb-4">
        This book is already in your favorites!
      </p>
      <% } %>

      <!-- Book List -->
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% books.forEach(book => { %>
        <li class="bg-white p-4 rounded-lg shadow-md">
          <!-- Book Image -->
          <% if (book.image_url) { %>
          <img
            src="<%= book.image_url %>"
            alt="<%= book.title %>"
            class="w-full h-48 object-cover rounded-md mb-4"
          />
          <% } else { %>
          <div
            class="w-full h-48 bg-gray-200 flex items-center justify-center rounded-md mb-4"
          >
            <span class="text-gray-500">No Image</span>
          </div>
          <% } %>

          <!-- Book Details -->
          <h2 class="text-xl font-semibold text-gray-800"><%= book.title %></h2>
          <p class="text-gray-600">
            <strong>Author:</strong> <%= book.author %>
          </p>
          <p class="text-gray-600"><strong>Year:</strong> <%= book.year %></p>
          <p class="text-gray-700 mt-2"><%= book.description %></p>

          <!-- Add to Favorites Button -->
          <form action="/add-to-favorites" method="POST" class="mt-4">
            <input type="hidden" name="bookId" value="<%= book.id %>" />
            <button
              type="submit"
              class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Add to Favorites
            </button>
          </form>

          <!-- Star Rating Form -->
          <form
            action="/rate-book"
            method="POST"
            class="mt-4 flex items-center space-x-2"
          >
            <input type="hidden" name="bookId" value="<%= book.id %>" />
            <span>Rate this book:</span>
            <% for (let i = 1; i <= 5; i++) { %>
            <button
              type="submit"
              name="rating"
              value="<%= i %>"
              class="text-yellow-500 hover:text-yellow-600"
              title="<%= i %> star<%= i > 1 ? 's' : '' %>"
            >
              <% if (i <= (book.ratings?.userRating || 0)) { %>
              <i class="fa-solid fa-star"></i>
              <% } else { %>
              <i class="fa-regular fa-star"></i>
              <% } %>
            </button>
            <% } %>
          </form>

          <!-- Display Average Rating -->
          <p class="mt-2 text-gray-600">
            Average Rating:
            <span class="text-yellow-500">
              <% if (book.ratings?.avgRating !== "N/A") { %> â˜…<%=
              book.ratings.avgRating %> (<%= book.ratings.avgRating %>/5) <% }
              else { %> No ratings yet <% } %>
            </span>
          </p>
        </li>
        <% }) %>
      </ul>

      <!-- Navigation Links -->
      <div class="mt-6 text-center">
        <a href="/favorites" class="text-indigo-600 hover:text-indigo-500"
          >View Favorites</a
        >
        |
        <a href="/logout" class="text-indigo-600 hover:text-indigo-500"
          >Logout</a
        >
      </div>
    </div>
  </body>
</html>
