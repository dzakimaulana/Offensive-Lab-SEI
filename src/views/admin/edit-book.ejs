<%- include('../partials/header') %>

<h1>Edit Book</h1>
<form action="/admin/edit-book/<%= book.id %>" method="POST" class="edit-book-form">
    <!-- Input tersembunyi untuk ID -->
    <input type="hidden" name="id" value="<%= book.id %>">
    
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" required>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" value="<%= book.author %>" required>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" value="<%= book.year %>" required>

    <button type="submit" class="update-button">Update Book</button>
</form>

<%- include('../partials/footer') %>