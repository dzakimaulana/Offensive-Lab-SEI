<%- include('../partials/header') %>

<h1>Add New Book</h1>
<form action="/admin/add-book" method="POST" enctype="multipart/form-data" class="add-book-form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" min="0" required>

    <p>Please provide either an image URL or upload an image file (choose one):</p>
    <label for="imageLink">Image URL:</label>
    <input type="text" id="imageLink" name="imageLink" placeholder="Enter image URL">

    <label for="imageUpload">Upload Image:</label>
    <input type="file" id="imageUpload" name="imageUpload" accept="image/*">

    <button type="submit" class="submit-button">Add Book</button>
</form>

<%- include('../partials/footer') %>