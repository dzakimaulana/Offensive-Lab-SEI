<%- include('../partials/header') %>

<h1>Admin Dashboard</h1>
<a href="/admin/add-book" class="add-button">Add New Book</a>

<h2>Book List</h2>
<table class="book-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.year %></td>
                <td>
                    <a href="/admin/edit-book/<%= book.id %>" class="edit-button">Edit</a>
                    <form action="/admin/delete-book/<%= book.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <button type="submit" class="delete-button">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>