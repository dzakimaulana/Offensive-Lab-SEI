<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="p-6 bg-gray-100">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold">Selamat datang, <%= user.username %>!</h2>
      <div>
        <a href="/favorites" class="bg-yellow-500 text-white px-4 py-2 rounded">
          ðŸ“š Lihat Favorit
        </a>
        <form action="/logout" method="POST" class="inline">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">
            Logout
          </button>
        </form>
      </div>
    </div>

    <% if (user.role === 'admin') { %>
    <!-- Admin Dashboard -->
    <h2 class="text-2xl font-bold mb-4">Admin Dashboard</h2>

    <!-- Form Tambah Buku -->
    <h3 class="text-xl font-semibold mb-2">Tambah Buku</h3>
    <form
      action="/admin/books/add"
      method="POST"
      class="mb-4 p-4 bg-white shadow-md rounded-lg"
    >
      <input
        type="text"
        name="title"
        placeholder="Judul Buku"
        required
        class="border p-2 rounded w-full mb-2"
      />
      <input
        type="text"
        name="author"
        placeholder="Penulis"
        required
        class="border p-2 rounded w-full mb-2"
      />
      <input
        type="number"
        name="year"
        placeholder="Tahun"
        required
        class="border p-2 rounded w-full mb-2"
      />
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
        Tambah Buku
      </button>
    </form>

    <!-- Daftar Buku (Admin) -->
    <table
      class="table-auto w-full mt-4 border-collapse border border-gray-300 bg-white shadow-md rounded-lg"
    >
      <tr class="bg-gray-200">
        <th class="border border-gray-300 px-4 py-2">Judul</th>
        <th class="border border-gray-300 px-4 py-2">Penulis</th>
        <th class="border border-gray-300 px-4 py-2">Tahun</th>
        <th class="border border-gray-300 px-4 py-2">Aksi</th>
      </tr>

      <% if (books && books.length > 0) { %> <% books.forEach(book => { %>
      <tr class="bg-white">
        <td class="border border-gray-300 px-4 py-2"><%= book.title %></td>
        <td class="border border-gray-300 px-4 py-2"><%= book.author %></td>
        <td class="border border-gray-300 px-4 py-2"><%= book.year %></td>
        <td class="border border-gray-300 px-4 py-2">
          <a href="/books/edit/<%= book.id %>" class="text-blue-500">Edit</a> |
          <form
            action="/admin/books/delete/<%= book.id %>"
            method="POST"
            onsubmit="return confirm('Hapus buku ini?')"
          >
            <button
              type="submit"
              class="bg-red-500 text-white px-4 py-2 rounded"
            >
              Hapus
            </button>
          </form>
        </td>
      </tr>
      <% }); %> <% } else { %>
      <tr>
        <td colspan="4" class="text-center py-4">Tidak ada buku tersedia.</td>
      </tr>
      <% } %>
    </table>

    <% } else { %>
    <!-- User Dashboard -->
    <h2 class="text-2xl font-bold mb-4">User Dashboard</h2>

    <!-- Daftar Buku (User) -->
    <h3 class="text-xl font-semibold">Daftar Buku</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
      <% if (books && books.length > 0) { %> <% books.forEach(book => { %>
      <div class="p-4 border rounded-lg shadow-md bg-white">
        <h4 class="text-lg font-semibold"><%= book.title %></h4>
        <p class="text-gray-600">Author: <%= book.author %></p>
        <p class="text-gray-600">Tahun: <%= book.year %></p>
        <button
          id="fav-btn-<%= book.id %>"
          onclick="addToFavorites('<%= book.id %>')"
          class="mt-2 bg-green-500 text-white px-4 py-2 rounded"
        >
          Tambahkan ke Favorit
        </button>
      </div>
      <% }); %> <% } else { %>
      <p class="text-center text-gray-600">Tidak ada buku yang tersedia.</p>
      <% } %>
    </div>
    <% } %>

    <script>
      function addToFavorites(bookId) {
        fetch("/favorites/add", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ book_id: bookId }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              // Redirect ke /favorites setelah berhasil menambahkan
              window.location.href = "/favorites";
            } else {
              alert(data.message);
            }
          })
          .catch((error) => console.error("Error:", error));
      }
    </script>
  </body>
</html>
