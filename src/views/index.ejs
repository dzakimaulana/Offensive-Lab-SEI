<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Catalog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Include Header Partial -->
    <%- include('partials/header') %>

    <main>
        <!-- Welcome Section -->
        <section class="welcome-section">
            <h2>Welcome to the Book Catalog</h2>
            <p>Explore our vast collection of books from various genres.</p>
            <a href="/books" class="cta-button">Explore Catalog</a>
        </section>

        <!-- Testimonial Section -->
        <section class="testimonials">
            <h2>What Our Readers Say</h2>
            <div class="testimonial-container">
                <% let testimonials = [
                    { text: "This book catalog has an amazing collection! I found rare books I couldn't find anywhere else.", author: "Riswan Hermawan" },
                    { text: "A fantastic platform for book lovers. The interface is easy to navigate, and the recommendations are great!", author: "Dzaki Maulana" },
                    { text: "I love how organized everything is. The categories help me find exactly what I need in seconds!", author: "Arrizal Rizki" },
                    { text: "The best book catalog I've ever used! The UI is smooth, and I always discover new books to read!", author: "Heaven Aulianisa" }
                ]; %>

                <% testimonials.forEach(({ text, author }) => { %>
                    <div class="testimonial">
                        <p>"<%= text %>"</p>
                        <h4>- <%= author %> -</h4>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>
</body>
</html>
